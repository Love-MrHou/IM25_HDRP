# 如果要從更高的目錄繼承 .editorconfig 設定，請移除以下行
root = true

# 適用於所有文件的設定
[*]
charset = utf-8
indent_style = space  # 使用空格進行縮排
indent_size = 4
end_of_line = lf  # 統一使用 LF 作為行尾符號
insert_final_newline = true  # 確保文件最後一行有換行符號

# C# 檔案的特定設定
[*.cs]

#### 核心 EditorConfig 選項 ####

# 縮排和間距
indent_size = 4
indent_style = space
tab_width = 4

# 新行喜好設定
end_of_line = lf
insert_final_newline = true
