# 如果要從更高的目錄繼承 .editorconfig 設定，請移除以下行
root = true

# 適用於所有文件的設定
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true

# 針對 C# 腳本的格式化規則
[*.cs]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true

# 針對 Shader 文件
[*.shader]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true

# 針對 YAML 文件 (*.meta, *.unity, *.prefab, *.asset)
[*.{yaml,unity,prefab,asset,meta}]
indent_style = space
indent_size = 2  # YAML 文件通常使用 2 個空格縮排
end_of_line = lf
insert_final_newline = true

# 針對 JSON 文件
[*.json]
indent_style = space
indent_size = 2  # JSON 文件通常使用 2 個空格縮排
end_of_line = lf
insert_final_newline = true